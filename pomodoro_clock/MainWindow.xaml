<Window
    x:Class="pomodoro_clock.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:pomodoro_clock"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Label x:Name="MainHeaderLabel" HorizontalContentAlignment="Center">Pomodor Clock</Label>
            <Image />
            <TextBlock
                Text="25:00"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <ToggleButton x:Name="StopStartBtn" Content="Start Clock" />
            <Button x:Name="PauseBtn" Content="Pause Clock" />
        </StackPanel>

    </Grid>
</Window>
